<tr>
	<td class="micropost">
		<span class ="content"><%= display(micropost.content) %></span>
		<span class="timestamp"> 
			About <%= time_ago_in_words(micropost.created_at) %> ago.
		</span>
	</td>
 	  <% if current_user?(micropost.user) %>
     <td>
     <%= link_to "delete", micropost, :method => :delete,
                                      :confirm => "You sure?" %>
 	</td>
 	<% end %>
</tr>